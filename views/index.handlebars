<div class="moveDown">
  <div class="container">
    <div class="row">
      <h1 class="col-sm-12 col-lg-12 justify-content-center text">!!Eat Dem Burgers!!</h1>
    </div>
  </div>
  <main>
    <div class="container text2">
      <div class="row">
        <div class="col-sm-6 col-lg-6 justify-content-center">
          <h3>Burgers that are ready to Eat</h3>
          {{#each burgers}} {{#unless this.devoured}}
          <div>
            <button data-id={{this.id}} class='burgerAvailable'> {{this.burger_name}}</button>
          </div>
          {{/unless}} {{/each}}
        </div>

        <div class="col-sm-6 col-lg-6">
          <h3>Burgers that are Eatten</h3>
          {{#each burgers}} {{#if this.devoured}}
          <div class='burgerEaten'>
            <div>
              {{this.burger_name}}
            </div>
          </div>
          {{/if}} {{/each}}
        </div>
      </div>
    </div>
  </main>
  <div class="container">
    <h2 class="col-sm-12 col-lg-12 justify-content-center text">Add a Burger</h2>
    <div class="row text2">
      <div class="col-sm-12 col-lg-12 justify-content-center">
        <form action="/api/burgers" method="POST">
          <input class="text3" type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
          <button type="submit" class="addBurgerButton">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
</div>
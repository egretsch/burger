<h1>!!Eat Dem Burgers!!</h1>



<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}} {{#unless this.devoured}}
        <div>
          <button data-id={{this.id}} class='burgerAvailable'> {{this.burger_name}}</button>
        </div>
        {{/unless}} {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}} {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}} {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add a Burger</h2>
<div class="row">
  <div class="col s12">
    <form action="/api/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">


      <button type="submit" class="addBurgerButton">Add Burger</button>
    </form>
  </div>
</div>